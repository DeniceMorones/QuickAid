<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF">

        <!-- Contenedor para el icono, se recomienda un tamaÃ±o fijo -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icon_procedimiento"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/placeholder_icon"
                android:contentDescription="Icono de procedimiento"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_procedimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del\nprocedimiento"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:maxLines="2" />

</LinearLayout>